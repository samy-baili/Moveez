<resources>

    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/window_background_color</item>
    </style>

    <style name="ExpandToolbarStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapseToolbarStyle" parent="ExpandToolbarStyle">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
